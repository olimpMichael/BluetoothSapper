<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.example.michael.saper" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="ru.example.michael.saper.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.example.michael.saper.PrefActivity"
            android:label="@string/preferences" >
        </activity>
        <activity android:name="ru.example.michael.saper.DeviceListActivity" >
        </activity>
        <activity android:name="ru.example.michael.saper.Multiplayer" >
        </activity>
        <activity android:name="ru.example.michael.saper.Description" >
        </activity>
    </application>

</manifest>
