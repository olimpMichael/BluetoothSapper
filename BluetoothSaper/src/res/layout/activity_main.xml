<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/tabLay">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

        <TextView
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textColor="#FF0000"
            android:id="@+id/tvMine"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <ImageButton
            android:src="@drawable/btnmenu"
            android:layout_column="2"
            android:background="@drawable/my_round_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Меню"
            android:onClick="onClick"
            android:id="@+id/btnMenu"
            android:layout_weight="1" />

        <ImageButton
            android:layout_column="3"
            android:background="@drawable/my_round_button"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnInit"
            android:src="@drawable/btnstart"
            android:onClick="onClick"
            android:layout_weight="1" />


        <ImageButton
            android:src="@drawable/chbmine_notchecked"
            android:layout_column="4"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMine"
            android:checked="false"
            android:gravity="fill_vertical"
            android:onClick="onClick"
            android:background="@drawable/my_round_button"
            android:layout_weight="1" />

        <ImageButton
            android:src="@drawable/btnsend"
            android:layout_column="5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/btnSend"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/my_round_button" />

            <ImageButton
                android:src="@drawable/btnbluemenu"
                android:layout_column="6"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:id="@+id/btnbluemenu"
                android:layout_weight="1"
                android:visibility="invisible"
                android:background="@drawable/my_round_button" />

        </TableRow>
    </TableLayout>



    <ru.example.michael.saper.gui.GUIBoard
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guiBoard"
        android:layout_gravity="center"
        android:background="@color/colorBoard"/>



</LinearLayout>
